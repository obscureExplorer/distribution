<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <!-- Domain model configuration -->
    <scanAnnotatedClasses>
        <packageInclude>domain</packageInclude>
    </scanAnnotatedClasses>

    <!--<environmentMode>FULL_ASSERT</environmentMode>-->

    <!-- Score configuration -->
    <scoreDirectorFactory>

<!--        <assertionScoreDirectorFactory>
            <scoreDrl>config/rules.drl</scoreDrl>
        </assertionScoreDirectorFactory>-->
        <scoreDrl>config/rules.drl</scoreDrl>
        <initializingScoreTrend>ONLY_DOWN</initializingScoreTrend>
    </scoreDirectorFactory>

    <!-- Optimization algorithms configuration -->
    <termination>
        <minutesSpentLimit>5</minutesSpentLimit>
        <bestScoreFeasible>true</bestScoreFeasible>
<!--        <termination>
            <secondsSpentLimit>10</secondsSpentLimit>
        </termination>-->
    </termination>

    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
    </constructionHeuristic>

     <localSearch>
       <unionMoveSelector>
           <changeMoveSelector>
               <valueSelector variableName="room"></valueSelector>
           </changeMoveSelector>
            <changeMoveSelector>
               <valueSelector variableName="period"></valueSelector>
           </changeMoveSelector>
         <swapMoveSelector>
             <variableNameInclude>period</variableNameInclude>
             <variableNameInclude>room</variableNameInclude>
             <filterClass>filter.DifferentTeacherSwapMoveFilter</filterClass>
         </swapMoveSelector>
         <moveListFactory>
            <cacheType>PHASE</cacheType>
            <moveListFactoryClass>move.factory.MultipleChangeMoveFactory</moveListFactoryClass>
         </moveListFactory>
         <moveListFactory>
            <cacheType>STEP</cacheType>
            <moveListFactoryClass>move.factory.MultipleSwapMoveFactory</moveListFactoryClass>
         </moveListFactory>

       </unionMoveSelector>
       <acceptor>
         <lateAcceptanceSize>800</lateAcceptanceSize>
       </acceptor>
       <forager>
         <acceptedCountLimit>4</acceptedCountLimit>
       </forager>
     </localSearch>
</solver>
